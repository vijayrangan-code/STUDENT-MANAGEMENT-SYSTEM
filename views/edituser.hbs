<h1>Edit Student Details</h1>
{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}
{{#each rows}}
<form  method ="post"action="/edituser/{{this.ID}}">
  <div class="form-group1">
    <label for="firstname">FirstName :</label>
    <input type="text"  name="firstname" value="{{this.FIRSTNAME}}"/>
    <label for="lastname">LastName :</label>
    <input type="text"  name="lastname"value="{{this.LASTNAME}}"/>
  </div>
  <div class="form-group">
    <label for="location">Location :</label>
    <input type="text"  name="location"value="{{this.LOCATION}}"/>
  </div>
  <div class="form-group">
    <label for="email">Email :</label>
    <input type="text"  name="email"value="{{this.EMAIL}}"/>
  </div>
  <div class="form-group">
    <label for="dob">DOB :</label>
    <input type="date"  name="dob" value="{{this.DOB}}"/>
  </div>
  <div class="form-group">
    <label for="education">Education :</label>
    <input type="text"  name="education" value="{{this.EDUCATION}}"/>
  </div>
  <div class="form-group">
    <label for="about">About :</label>
    <input type="textarea" id="textarea"  name="about"/>
  </div>
  <div class="form-group">
    <button class="change-btn" type="submit">Save Changes</button>
    <a href="/">View All</a>
  </div>
</form>
{{/each}} 